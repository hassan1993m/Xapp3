<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewSingin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_margin_sing_in"
            app:srcCompat="@drawable/hafezieh_vector"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputSingin"
            style="@style/AllText"
            android:layout_marginLeft="@dimen/padding_margin_sing_in"
            android:layout_marginTop="@dimen/padding_margin"
            android:layout_marginRight="@dimen/padding_margin_sing_in">

            <android.support.design.widget.TextInputEditText
                style="@style/AllText"
                android:layout_margin="@dimen/padding_margin"
                android:gravity="left"
                android:hint="@string/singin_hint_phonenumber"
                android:inputType="phone"
                android:maxLength="11"
                />

        </android.support.design.widget.TextInputLayout>

        <Button
        android:id="@+id/button2"
        style="@style/AllText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:layout_marginLeft="@dimen/padding_margin_sing_in"
        android:layout_marginRight="@dimen/padding_margin_sing_in"
        android:text="@string/singin_button_text"
        />
    </LinearLayout>