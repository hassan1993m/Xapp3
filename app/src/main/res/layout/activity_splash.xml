<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_background"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash">

        <ImageView
            android:id="@+id/imageViewSplash"
            android:layout_width="@dimen/image_view_hafezieh_size"
            android:layout_height="@dimen/image_view_hafezieh_size"
            android:src="@drawable/hafezieh_vector" />

        <TextView
            android:id="@+id/textViewSplash_en"
            style="@style/AllText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_margin_small_for_all_activity"
            android:text="@string/app_name" />


        <ProgressBar
            android:id="@+id/progressBar_splash"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_margin_small_for_all_activity" />
</LinearLayout>